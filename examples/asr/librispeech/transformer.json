{
  "batch_size":16,
  "num_epochs":50,
  "sorta_epoch":2,
  "ckpt":"examples/asr/librispeech/ckpts/debug",
  "solver_gpu":[0],
  "solver_config":{
    "clip_norm":100.0,
    "log_interval":1
  },

  "model":"speech_transformer",
  "model_config":{
